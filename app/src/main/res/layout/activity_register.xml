<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/role_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usajili"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/green_dark"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal" />

        <!-- Name Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jina Kamili"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Andika jina lako"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Email Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barua Pepe"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="example@email.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Phone Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nambari ya Simu"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="07XXXXXXXX"
            android:inputType="phone"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Password Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenosiri"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Chagua nenosiri"
            android:inputType="textPassword"
            android:background="@drawable/edittext_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="32dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/button_register"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sajili Sasa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_green_background" />

        <!-- Already have account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tayari una akaunti? Ingia"
            android:textSize="14sp"
            android:textColor="@color/green_dark"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>
</ScrollView>