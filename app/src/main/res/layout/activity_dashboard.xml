<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Name and Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AgroLink360"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/green_dark"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Farming Network"
            android:textSize="16sp"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chagua Jukumu Lako"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chagua jinsi unavyotaka kutumia AgroLink360"
            android:textSize="14sp"
            android:textColor="@color/gray_medium"
            android:layout_marginBottom="16dp" />

        <!-- Selected Role Text -->
        <TextView
            android:id="@+id/selected_role_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/green_dark"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

        <!-- Farmer Option Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_farmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/green_light"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mkulima"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lima mazao na uunganishe na masoko"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Business Option Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/blue_light"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mfanyabiashara"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nunua mazao na uunganishe na wakulima"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Expert Option Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="@color/orange_light"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mtaalamu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shiriki ujuzi wa kilimo"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Endelea"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_green_background"
            android:layout_marginTop="16dp"
            android:enabled="true" />
    </LinearLayout>
</ScrollView>